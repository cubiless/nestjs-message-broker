{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*",
    "main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "tests"
  ]
}
